<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="3dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="vertical"
        android:id="@+id/llForDropdownHeader"
        >
        <ImageView
            android:id="@+id/severity_iv_bar"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:src="@color/bg_high"
            android:visibility="gone"
            tools:visibility="visible"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:id="@+id/llForIngredient"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iconIv"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                tools:src="@drawable/severity_high"
                android:layout_gravity="center_vertical"
                android:paddingTop="13dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingBottom="18dp"
                android:visibility="visible"
                tools:visibility="visible"
                />

            <TextView
                android:id="@+id/ingredient_nameTv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="9"
                android:layout_marginStart="6dp"
                tools:text="Sodium Lauryl Sulfate"
                android:textSize="18sp"
                android:gravity="center_vertical"
                tools:gravity="bottom"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                />

            <ImageView
                android:id="@+id/toogleIv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/round_arrow_down"
                android:layout_gravity="center_vertical"
                />

        </LinearLayout>
    </LinearLayout>



</androidx.cardview.widget.CardView>